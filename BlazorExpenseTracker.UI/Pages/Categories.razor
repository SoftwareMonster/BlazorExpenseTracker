@using BlazorExpenseTracker.Model
@using BlazorExpenseTracker.UI.Interfaces
@using BlazorExpenseTracker.UI.Services
@page "/categories"
@inject ICategoryService CategoryService

<h3>Categories</h3>
<p>@Message</p>
@if (categories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
        <tr>
            <td colspan="2"><a href="/categorydetails">Add New</a></td>
        </tr>
        </tbody>
    </table>
    <table>
        <thead>
        <tr><th>Name</th></tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td><a href="/categorydetails/@category.Id"><i>Edit</i></a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public IEnumerable<Category> categories { get; set; }
    public string Message { get; set; }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            categories = await CategoryService.GetAllCategories();
        }
        catch (Exception e)
        {
            Message = "Algo fue mal" + e.Message;
        }
    }

}
